@model Dictionary<string, string>
@{
    ViewData["Title"] = "Index";
}
<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded">
    <input type="text" name="name" placeholder="English" />
    <input type="text" name="val" placeholder="Turkish" />
    <button type="submit">Kaydet</button>
</form>
<br />
<br />
<h1>Words</h1>
<br />
@foreach (var item in Model)
{
    <h2>
        @item.Key --> @item.Value  <a asp-action="DeleteItem" asp-route-name="@item.Key">Sil</a>
    </h2>
}